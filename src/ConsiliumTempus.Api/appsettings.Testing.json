{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "JwtSettings": {
    "SecretKey": "This-is-a-super-duper-secret-key-used-for-testing-purposes",
    "ExpiryHours": 24,
    "Issuer": "ConsiliumTempus-Test",
    "Audience": "ConsiliumTempus-Test"
  },
  "DatabaseSettings": {
    "Server": "",
    "Port": "",
    "Name": "",
    "User": "",
    "Password": ""
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/backend-log.api-.log",
                "rollingInterval": "Day",
                "outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss.fff zzz} {CorrelationId} {Level:u}] {Username} {Message:lj}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/backend-log.api-.json",
                "rollingInterval": "Day",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
            },
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}
